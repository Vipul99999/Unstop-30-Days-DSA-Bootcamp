===========================
	CPP CODE 
===========================

#include <bits/stdc++.h>
using namespace std;

int main() {
    int s1, s2, s3;
    cin >> s1 >> s2 >> s3;

    int total = s1 + s2 + s3;
    if (total % 2 != 0) {
        cout << -1 << endl;
        return 0;
    }

    int rounds = total / 2;

    // Try maximum possible "both correct" rounds, downwards
    for (int x = rounds; x >= 0; x--) {
        // distribute x across 3 pairs
        for (int x12 = 0; x12 <= x; x12++) {
            for (int x23 = 0; x23 + x12 <= x; x23++) {
                int x13 = x - x12 - x23;

                int r1 = s1 - (x12 + x13);
                int r2 = s2 - (x12 + x23);
                int r3 = s3 - (x13 + x23);

                if (r1 >= 0 && r2 >= 0 && r3 >= 0 &&
                    r1 % 2 == 0 && r2 % 2 == 0 && r3 % 2 == 0) {
                    cout << x << endl;
                    return 0;
                }
            }
        }
    }

    cout << -1 << endl;
    return 0;
}
