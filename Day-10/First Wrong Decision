#include <bits/stdc++.h>
using namespace std;

int FirstWrongDecision(string s) {
    // User logic goes here
    int left = 0;
    int right = s.length()-1;
    int result = -1;
    while(left <= right){
        int mid = left + (right - left)/2;
        if(s[mid] == 'W'){
            right = mid-1;
            result = mid;
        }
         else {
            left = mid + 1;
        }
    }
    return result;
}

int main() {
    string str;
    cin >> str;
    // Call the function FirstWrongDecision().
    cout << FirstWrongDecision(str) << endl;
    return 0;
}
