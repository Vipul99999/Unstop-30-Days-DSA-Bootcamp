#include <iostream>
#include <vector>

int isMountainValleyPattern(const std::vector<int>& arr) {
    // Implement your logic here
   int n = arr.size();
    if (n == 1) return 1;

    for (int i = 1; i < n; ++i) {
        if (arr[i] == arr[i - 1]) return 0; // No equal adjacent values
    }

    for (int i = 1; i < n - 1; ++i) {
        if (!((arr[i - 1] < arr[i] && arr[i] > arr[i + 1]) ||
              (arr[i - 1] > arr[i] && arr[i] < arr[i + 1]))) {
            return 0;
        }
    }

    return 1;
}

int main() {
    int n;
    std::cin >> n;
    std::vector<int> arr(n);
    for (int i = 0; i < n; ++i) {
        std::cin >> arr[i];
    }
    int result = isMountainValleyPattern(arr);
    std::cout << result << std::endl;
    return 0;
}
