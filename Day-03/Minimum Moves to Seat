//CPP
#include <iostream>
#include <vector>
#include <algorithm>
#include <cmath>
using namespace std;

int calculate_min_moves(vector<int>& seats, vector<int>& students) {
    sort(seats.begin(), seats.end());
    sort(students.begin(), students.end());

    int total_moves = 0;
    for (int i = 0; i < seats.size(); ++i) {
        total_moves += abs(seats[i] - students[i]);
    }
    return total_moves;
}

int main() {
    int n;
    cin >> n;
    vector<int> seats(n);
    vector<int> students(n);
    
    for (int i = 0; i < n; ++i) {
        cin >> seats[i];
    }
    for (int i = 0; i < n; ++i) {
        cin >> students[i];
    }

    int result = calculate_min_moves(seats, students);
    cout << result << endl;
    return 0;
}
