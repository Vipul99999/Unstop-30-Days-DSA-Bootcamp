#include <bits/stdc++.h>
using namespace std;

int main() {
    string s;
    cin >> s;

    int F = 0, B = 0, L = 0, R = 0;
    for (char c : s) {
        if (c == 'F') F++;
        else if (c == 'B') B++;
        else if (c == 'L') L++;
        else if (c == 'R') R++;
    }

    int netX = R - L;
    int netY = F - B;

    int minimal_moves = abs(netX) + abs(netY);
    int max_deletions = (int)s.size() - minimal_moves;

    cout << max_deletions << endl;
    return 0;
}
