#include <iostream>
#include <vector>

long long subset_xor_sum(const std::vector<int>& arr) {
    int n = arr.size();
    int OR = 0;
    for (int num : arr) {
        OR |= num;  // bitwise OR of all elements
    }
    return 1LL * OR * (1LL << (n - 1));  // ensure 64-bit calculation
}

int main() {
    int n;
    std::cin >> n;
    std::vector<int> arr(n);
    for (int i = 0; i < n; ++i) {
        std::cin >> arr[i];
    }
    long long result = subset_xor_sum(arr);
    std::cout << result << std::endl;
    return 0;
}
