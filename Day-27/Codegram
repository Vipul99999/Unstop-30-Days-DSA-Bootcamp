#include <iostream>
#include <cmath>
using namespace std;

void user_logic(int N, int &min_people, int &max_one_way_pairs) {
    if (N == 0) {
        min_people = 0;
        max_one_way_pairs = 0;
        return;
    }

    // Solve k*(k-1)/2 >= N for minimum k
    // Quadratic: k^2 - k - 2*N >= 0
    int k = (int)ceil((1 + sqrt(1 + 8.0*N)) / 2.0);

    min_people = k;
    max_one_way_pairs = 0; // as per problem examples
}

int main() {
    int N;
    cin >> N;
    int min_people, max_one_way_pairs;
    user_logic(N, min_people, max_one_way_pairs);
    cout << min_people << " " << max_one_way_pairs << endl;
    return 0;
}
