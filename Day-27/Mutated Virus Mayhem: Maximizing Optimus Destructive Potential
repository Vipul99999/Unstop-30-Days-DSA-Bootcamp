#include <bits/stdc++.h>
using namespace std;

int maxMutatedViruses(int N, vector<int>& contamination_levels) {
    vector<int> freq(101, 0);
    for (int level : contamination_levels) freq[level]++;

    int count = 0;

    // Process consecutive triples optimally
    for (int i = 1; i <= 98; i++) {
        int take = min({freq[i], freq[i+1], freq[i+2]});
        if (take > 0) {
            freq[i] -= take;
            freq[i+1] -= take;
            freq[i+2] -= take;
            count += take;
        }
    }

    // Remaining identical triples
    for (int i = 1; i <= 100; i++) {
        count += freq[i] / 3;
    }

    return count;
}

int main() {
    ios::sync_with_stdio(false);
    cin.tie(nullptr);

    int V;
    cin >> V;
    vector<int> contamination_levels(V);
    for (int i = 0; i < V; i++) cin >> contamination_levels[i];

    cout << maxMutatedViruses(V, contamination_levels) << "\n";
    return 0;
}
