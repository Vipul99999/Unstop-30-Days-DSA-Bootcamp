#include <iostream>
#include <string>
using namespace std;

int user_logic(int n, string s) {
    int count = 0;
    for (int i = 0; i + 3 < n; i++) {
        if (s.substr(i, 4) == "kill") {
            count++;
            i += 3; // skip to avoid overlapping
        }
    }
    return n - count;
}

int main() {
    int n;
    string s;
    cin >> n >> s;
    int result = user_logic(n, s);
    cout << result << endl;
    return 0;
}
